    <script type="text/javascript">
        $(function () {

            var $container = $('.pesquisa-mobile-container')
            var $overlay = $('.ov-pesquisa-mobile')
            var $form = $container.find('form')
            var $button = $container.find('button')

            // Functions
            function hide() {
                $.cookie('pesquisa-mobile', true)
                $container.remove()
            }

            function submit() {

                var values = {
                    q1:$form.find('[name=q1]:checked').val(),
                    q2:$form.find('[name=q2]').val(),
                    q3:$form.find('[name=q3]:checked').val()
                }
                console.log('Submitting')
                for (var key in values) {
                    if (!values[key]) continue
                    console.log('Sending value ' + key, values[key])
                    _gaq.push(['_trackEvent', 'Pesquisa Mobile', key, values[key]])
                }
                _gaq.push(['_trackEvent', 'Pesquisa Mobile', 'submit'])

                hide()
            }

            // Events
            $overlay.click(function (ev) {
                if (ev.target == $overlay[0]) {
                    _gaq.push(['_trackEvent', 'Pesquisa Mobile', 'close'])
                    hide()
                }
            })
            $button.click(submit)

            $container.find('.mail-href').click(function () {
                _gaq.push(['_trackEvent', 'Pesquisa Mobile', 'mail'])
            })

            // Init
            if (!$.cookie('pesquisa-mobile')) {
                //_gaq.push(['_trackEvent', 'Pesquisa Mobile', 'show'])
                //$container.show()
            }

        })
    </script>
